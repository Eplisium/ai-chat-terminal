{
    "tools": {
        "search": {
            "enabled": true,
            "description": "Search the web and return formatted results.",
            "implementation": "search_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "Search query"
                    },
                    "num_results": {
                        "type": "integer",
                        "description": "Number of results",
                        "default": 5,
                        "minimum": 1
                    }
                },
                "required": ["query"]
            }
        },
        "calculate": {
            "enabled": true,
            "description": "Evaluate mathematical expressions safely.",
            "implementation": "calculate_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "expression": {
                        "type": "string",
                        "description": "Math expression (+, -, *, /, **)"
                    }
                },
                "required": ["expression"]
            }
        },
        "time": {
            "enabled": true,
            "description": "Get current time in specified timezone.",
            "implementation": "time_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "timezone": {
                        "type": "string",
                        "description": "Timezone (e.g., 'America/New_York')",
                        "default": "UTC"
                    }
                },
                "required": []
            }
        },
        "weather": {
            "enabled": true,
            "description": "Get current weather for a location.",
            "implementation": "weather_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "location": {
                        "type": "string",
                        "description": "Location name"
                    },
                    "units": {
                        "type": "string",
                        "description": "Units system",
                        "enum": ["metric", "imperial"],
                        "default": "metric"
                    }
                },
                "required": ["location"]
            }
        },
        "system": {
            "enabled": true,
            "description": "Get system information (OS, memory, disk, CPU).",
            "implementation": "system_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "description": "Information type",
                        "enum": ["os", "memory", "disk", "cpu", "all"],
                        "default": "all"
                    },
                    "path": {
                        "type": "string",
                        "description": "Path for disk info"
                    }
                },
                "required": []
            }
        },
        "fileops": {
            "enabled": true,
            "description": "Perform file operations with advanced features.",
            "implementation": "fileops_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "operation": {
                        "type": "string",
                        "description": "Operation type",
                        "enum": ["info", "list", "exists", "find", "size", "create", "delete", "copy", "move", "write", "read", "analyze"]
                    },
                    "path": {
                        "type": "string",
                        "description": "Target path"
                    },
                    "detailed": {
                        "type": "boolean",
                        "description": "Include detailed info",
                        "default": false
                    },
                    "recursive": {
                        "type": "boolean",
                        "description": "Process subdirectories",
                        "default": false
                    },
                    "pattern": {
                        "type": "string",
                        "description": "File filter pattern"
                    },
                    "content": {
                        "type": "string",
                        "description": "Content to write"
                    },
                    "destination": {
                        "type": "string",
                        "description": "Destination path"
                    },
                    "mkdir": {
                        "type": "boolean",
                        "description": "Create directory",
                        "default": false
                    },
                    "start_line": {
                        "type": "integer",
                        "description": "Start line (1-based)",
                        "minimum": 1
                    },
                    "end_line": {
                        "type": "integer",
                        "description": "End line (1-based)",
                        "minimum": 1
                    },
                    "include_insights": {
                        "type": "boolean",
                        "description": "Include file insights",
                        "default": false
                    },
                    "max_depth": {
                        "type": "integer",
                        "description": "Max recursive depth",
                        "minimum": 1
                    },
                    "exclude_patterns": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Patterns to exclude"
                    },
                    "chunk_size": {
                        "type": "integer",
                        "description": "Read chunk size (bytes)",
                        "default": 1048576
                    }
                },
                "required": ["operation", "path"]
            }
        },
        "scrape": {
            "enabled": true,
            "description": "Scrape webpage content using Firecrawl.",
            "implementation": "scrape_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "url": {
                        "type": "string",
                        "description": "URL to scrape"
                    },
                    "format": {
                        "type": "string",
                        "description": "Output format",
                        "enum": ["markdown", "html", "links", "metadata"],
                        "default": "markdown"
                    },
                    "wait_for": {
                        "type": "integer",
                        "description": "Page load wait time (ms)",
                        "default": 5000,
                        "minimum": 0
                    },
                    "block_media": {
                        "type": "boolean",
                        "description": "Block media loading",
                        "default": true
                    }
                },
                "required": ["url"]
            }
        }
    }
}