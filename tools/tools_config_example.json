{
    "tools": {
        "example_search": {
            "enabled": true,
            "description": "Example search tool that demonstrates basic parameter structure",
            "implementation": "example_search_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "query": {
                        "type": "string",
                        "description": "The search query to execute"
                    },
                    "limit": {
                        "type": "integer",
                        "description": "Maximum number of results to return",
                        "default": 10,
                        "minimum": 1,
                        "maximum": 100
                    }
                },
                "required": ["query"]
            }
        },
        "example_data_processor": {
            "enabled": true,
            "description": "Example data processing tool that shows complex parameter structures",
            "implementation": "example_processor_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "input_format": {
                        "type": "string",
                        "description": "Format of the input data",
                        "enum": ["json", "csv", "xml", "yaml"],
                        "default": "json"
                    },
                    "output_format": {
                        "type": "string",
                        "description": "Format for the output data",
                        "enum": ["json", "csv", "xml", "yaml"],
                        "default": "json"
                    },
                    "filters": {
                        "type": "array",
                        "description": "List of filters to apply to the data",
                        "items": {
                            "type": "object",
                            "properties": {
                                "field": {
                                    "type": "string",
                                    "description": "Field name to filter on"
                                },
                                "operator": {
                                    "type": "string",
                                    "description": "Filter operator",
                                    "enum": ["equals", "contains", "greater_than", "less_than"]
                                },
                                "value": {
                                    "type": "string",
                                    "description": "Value to compare against"
                                }
                            },
                            "required": ["field", "operator", "value"]
                        }
                    },
                    "options": {
                        "type": "object",
                        "description": "Additional processing options",
                        "properties": {
                            "case_sensitive": {
                                "type": "boolean",
                                "description": "Whether string comparisons are case sensitive",
                                "default": false
                            },
                            "skip_empty": {
                                "type": "boolean",
                                "description": "Whether to skip empty fields",
                                "default": true
                            },
                            "max_depth": {
                                "type": "integer",
                                "description": "Maximum depth for nested processing",
                                "default": 3,
                                "minimum": 1,
                                "maximum": 10
                            }
                        }
                    }
                },
                "required": ["input_format"]
            }
        },
        "example_system": {
            "enabled": true,
            "description": "Example system tool that shows simple parameter structure with enums",
            "implementation": "example_system_tool.py",
            "parameters": {
                "type": "object",
                "properties": {
                    "info_type": {
                        "type": "string",
                        "description": "Type of system information to retrieve",
                        "enum": ["cpu", "memory", "disk", "network"],
                        "default": "cpu"
                    },
                    "format": {
                        "type": "string",
                        "description": "Output format",
                        "enum": ["text", "json"],
                        "default": "json"
                    }
                },
                "required": []
            }
        }
    }
} 